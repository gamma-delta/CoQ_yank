<?xml version="1.0" encoding="UTF-8"?>
<objects>
  <!-- We modify the base recoiler to be a yank instead! Since inheritance propagates these changes downstream,
       and we patch the inside of Teleporter to cooperate with YankMod, for the most part this should Just Work. -->
  <object Name="BaseRecoiler" Inherits="Item" Load="Merge">
    <part Name="Description" Short="A fragile crystalline disk with a recessed button on top. It shivers in your hands." />

    <!-- We attach our custom Yank part, which changes the name and forces the yank to be tinkerable. -->
    <part Name="PKYNK_YankMod" ReplaceName="true" MakeAlwaysTinkerable="true" />
    <!-- Yanks never cost any energy... -->
    <part Name="Teleporter" ChargeUse="0" />
    <tag Name="ExcludeFromDynamicEncounters" Value="*noinherit" />

    <!-- ...so we remove the cell and socket too. -->
    <removepart Name="EnergyCell" />
    <removepart Name="EnergyCellSocket" />
  </object>

  <!-- And here's our invention, the geofold yank. Just a vanilla yank with the GeofoldYank part. -->
  <object Name="pkynk_geofoldyank" Inherits="BaseRecoiler">
    <part Name="Render" DisplayName="{{g|geofold}} yank" />
    <part Name="PKYNK_GeofoldYank" />

    <part Name="Commerce" Value="10" />
    <tag Name="Tier" Value="1" />
  </object>

  <!-- We edit the vanilla recoilers; since they inherit BaseRecoiler,
       there's not much to do, but we currently make them much cheaper. (Petra: Change this, probably.) -->
  <object Name="Joppa Recoiler" Load="Merge">
    <part Name="Commerce" Value="15" />
  </object>
  <object Name="Grit Gate Recoiler" Load="Merge">
    <part Name="Commerce" Value="15" />
  </object>
  <object Name="Golgotha Recoiler" Load="Merge">
    <part Name="Commerce" Value="20" />
  </object>
  <object Name="Kyakukya Recoiler" Load="Merge">
    <part Name="Commerce" Value="20" />
  </object>
  <!-- Making stilt yanks more common because why is the stilt as difficult to get to as golgotha?
  do most people not rush stilt?
  -->
  <object Name="Six Day Stilt Recoiler" Load="Merge">
    <part Name="Commerce" Value="15" />
  </object>
  <object Name="Bethesda Susa Recoiler" Load="Merge">
    <part Name="Commerce" Value="20" />
  </object>
  <object Name="Ezra Recoiler" Load="Merge">
    <part Name="Commerce" Value="25" />
  </object>
  <object Name="Yd Freehold Recoiler" Load="Merge">
    <part Name="Commerce" Value="50" />
  </object>
  <!-- Programmable recoilers are similar, but we want to ensure they don't consume charge when being programmed,
       and we'd like to depreciate them since they get nerfed harder. (Petra: Make them bleed for these lol) -->
  <object Name="Programmable Recoiler" Load="Merge">
    <part Name="Commerce" Value="60" />
    <part Name="ProgrammableRecoiler" ChargeUse="0" />
  </object>
  <object Name="Reprogrammable Recoiler" Load="Merge">
    <part Name="Commerce" Value="70" />
    <part Name="ProgrammableRecoiler" ChargeUse="0" />
  </object>
</objects>
